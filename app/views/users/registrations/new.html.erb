<div class="main">
  <div class="form-container">
    <!-- フォームのタイトル -->
    <h1 class="ms-2 me-2">Registrarse</h1>
    <div class="form">
      <div class="form-body">
        <!-- ユーザー登録用のフォーム、必要なバリデーションクラスが適用されている -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'needs-validation'}) do |f| %>
          <!-- エラーメッセージを表示する部分、特定のスタイルクラスが適用される -->
          <%= render "users/shared/error_messages", resource: resource, class: "form-error" %>
          <!-- 名前の入力フィールド -->
          <div class="mb-3">
            <%= f.label :name, 'Nombre', class: 'form-label' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', maxlength: 50, required: true %>
            <!-- 名前未入力時のエラーメッセージ -->
            <div class="invalid-feedback">
              Por favor, ingresa tu nombre.
            </div>
          </div>
          <div class="mb-3">
            <!-- メールアドレスの入力フィールド -->
            <%= f.label :email, 'Correo electrónico', class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
            <!-- メールアドレス未入力時のエラーメッセージ -->
            <div class="invalid-feedback">
              Por favor, ingresa tu correo electrónico.
            </div>
          </div>
          <!-- 電話番号の入力フィールド -->
          <div class="mb-3">
            <%= f.label :phone_number, 'Número de teléfono', class: 'form-label' %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: 'form-control', maxlength: 14, required: true %>
            <!-- 電話番号未入力時のエラーメッセージ -->
            <div class="invalid-feedback">
              Por favor, ingresa tu número de teléfono.
            </div>
          </div>
          <!-- パスワードの入力フィールド、最小文字数が設定されている場合はその情報も表示 -->
          <div class="mb-3">
            <%= f.label :password, 'Contraseña', class: 'form-label' %>
            <% if @minimum_password_length %>
              <div class="invalid-feedback">(<%= @minimum_password_length %> caracteres mínimos)</div>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
            <!-- パスワード未入力時のエラーメッセージ -->
            <div class="invalid-feedback">
              Por favor, ingresa tu contraseña.
            </div>
          </div>
          <!-- パスワード確認の入力フィールド -->
          <div class="mb-3">
            <%= f.label :password_confirmation, 'Confirmación de contraseña', class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
            <!-- パスワード確認未入力時のエラーメッセージ -->
            <div class="invalid-feedback">
              Por favor, confirma tu contraseña.
            </div>
          </div>
          <!-- reCAPTCHAのタグ、フォーム送信時のセキュリティ強化に用いる -->
          <div class="mb-3">
            <%= recaptcha_tags %>
          </div>
          <!-- 利用規約とプライバシーポリシーへの同意を確認するチェックボックス -->
          <div class="mb-3 form-check">
            <%= f.check_box :agreement, class: 'form-check-input' %>
            <%= f.label :agreement, class: 'form-check-label' do %>
              Aceptar <%= link_to 'los términos y condiciones', static_pages_terms_of_service_path, target: '_blank', class: 'text-primary' %> y <%= link_to 'la política de privacidad', static_pages_privacy_policy_path, target: '_blank', class: 'text-primary' %>.
            <% end %>
          </div>
          <!-- フォーム送信ボタン -->
          <div class="actions mb-3">
            <%= f.submit "Registrarse", class: "btn btn-primary" %>
          </div>
        <% end %>
        <!-- ログインページへ -->
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
