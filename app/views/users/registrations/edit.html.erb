<div class="main">
  <div class="form-container">
    <h1 class="mb-4">Editar tu cuenta</h1>
    <div class="form">
      <div class="form-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'needs-validation' }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, 'Nombre', class: 'form-label' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :image, 'Imagen', class: 'form-label' %>
            <%= f.file_field :image, autofocus: true, autocomplete: "image", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :email, 'Correo electrónico', class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info" role="alert">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :phone_number, 'Número de teléfono', class: 'form-label' %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, 'Contraseña', class: 'form-label' %>
            <small class="form-text text-muted">(Deja en blanco si no deseas cambiarlo)</small>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> caracteres mínimos</small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, 'Confirmación de contraseña', class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, 'Contraseña actual', class: 'form-label' %>
            <small class="form-text text-muted">(Necesitamos tu contraseña actual para confirmar tus cambios)</small>
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', required: true %>
          </div>

          <div class="actions mb-4">
            <%= f.submit "Actualizar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <br>
    <br>
    <%= button_to "Cancelar tu cuenta", destroy_user_path(resource), form: { data: { turbo_confirm: "¿Realmente quieres eliminar tu cuenta?" }}, method: :delete, id: "frmDestroy", class: "btn btn-danger" %>
  </div>
</div>
