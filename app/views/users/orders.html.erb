<div class="main user-show">
  <div class="container">
    <div class="user">
      <%#<img src="<%= "/user_images/#{@user.profile_image}" %>
      <h2><%= current_user.name %></h2>
      <p>ID de Usuario: <%= current_user.id %></p>
      <% if @average_rating.nil? %>
        <h5>Evaluaciones: -- </h5>
      <% else %>
        <div class="average-rating">
          <h5>
            Evaluaciones: <%= render_stars(@average_rating) %>
            (<%= sprintf('%.2f', @average_rating) %>)
          </h5>
        </div>
      <% end %>
      <% if current_user && current_user.id == current_user.id %>
        <%= link_to("Editar", "/users/#{current_user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li class="<%= 'active' if controller_name == 'users' && action_name == 'show' %>">
        <%= link_to("Servicios", "/users/#{current_user.id}") %>
      </li>

      <% if current_user && current_user.id == current_user.id %>
        <li class="<%= 'active' if controller_name == 'users' && action_name == 'likes' %>">
          <%= link_to("Likes!", "/users/#{current_user.id}/likes") %>
        </li>
      <% end %>
      <% if current_user && current_user.id == current_user.id %>
        <li class="<%= 'active' if controller_name == 'users' && action_name == 'orders' %>">
          <%= link_to("Tus pedidos", user_orders_path(current_user.id)) %>
        </li>
      <% end %>
      <% if current_user && current_user.id == current_user.id %>
        <li class="<%= 'active' if controller_name == 'users' && action_name == 'sales' %>">
          <%= link_to("Tus ventas", user_sales_path(current_user.id)) %>
        </li>
      <% end %>
    </ul>

    <% @orders.each do |order| %>
      <div class="posts-index-item">
        <div class="post-left">
          <% if order.seller.present? && order.service %>
            <img src="<%= "/service_images/#{order.service.image}" %>">
          <% else %>
            <img src="<%= "default_service.jpg" %>">
          <% end %>
        </div>
        <div class="post-right">
          <% if order.seller.present? && order.service %>
            <%= link_to "/services/#{order.service.id}" do %>
              <h4><%= order.service.title %></h4>
            <% end %>
          <% else %>
            <h4>Este registro ha sido eliminada.</h4>
          <% end %>
          <div>
            <div class="post-user-name", style="display: flex; justify-content: space-between;">
              <% if order.seller.present? %>
                <p>Vendedor: <%= order.seller.name %></p>
                <% if current_user.id != order.seller_id %>
                  <% if order.service %>
                    <% if !order.already_reviewed?(current_user, order.id) %>
                      <%= link_to "Evaluar", new_service_review_path(order_id: order.id, service_id: order.service.id, user_id: current_user.id), class: "btn btn-primary" %>
                    <% end %>
                  <% end %>
                <% end %>
              <% else %>
                <p>Vendedor: Usuario dado de baja</p>
              <% end %>
            </div>
            <div style="display: flex; justify-content: space-between;">
              <p>Estado: <%= order.status %></p>
              <p>Fecha de pedido: <%= order.created_at.strftime("%d/%m/%Y") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @orders %>
  </div>
</div>
