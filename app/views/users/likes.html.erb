<div class="main">
  <div class="container">
    <h1 class="text-center">Favoritos</h1>
    <div class="cards-container">
      <% if @likes.any? %>
        <% @likes.order(created_at: :desc).each do |like| %>
          <% service = Service.find_by(id: like.service_id) %>
          <%= link_to service_path(service.id) do %>
              <div class="card">
                  <% if service.image.attached? %>
                      <%= image_tag(service.image, class: "card-img-top", alt: "...") %>
                  <% else %>
                      <%= image_tag('default_service.jpg', class: "card-img-top", alt: "...") %>
                  <% end %>
                  <div class="card-body">
                      <h5 class="card-title"><%= service.title.truncate(40) %></h5>
                      <p class="card-text"><%= service.user.name %></p>
                      <div style="display: flex; justify-content: space-between;">
                        <div class="star">
                          <% reviews = service.reviews %>
                          <% if reviews.present? %>
                            <% average_rating = calculate_average_rating(reviews) %>
                            <%= "⭐️" %> <%= sprintf('%.2f', average_rating) %>
                          <% else %>
                            <h5> -- </h5>
                          <% end %>
                        </div>
                      </div>
                  </div>
              </div>
          <% end %>
        <% end %>
        <%= paginate @likes %>
      <% else %>
        <p>No tienes servicios favoritos.</p>
      <% end %>
    </div>
  </div>
</div>
