      <% elsif current_user && @service.user_id == current_user.id %>
        <!-- No puedes comprar tu propio servicio. -->
      <% else %>
        <%= link_to "Hacer el pedido", new_user_session_path(flash_alert: 'Por favor, inicia sesiÃ³n'), class: "buttons__main", data: { turbo_frame: '_top'} %>
      <% end %>
    </div>
  </div>
<% end %>
