<%= turbo_frame_tag 'plan_detail' do %>
  <div class="posts-show-item">
    <div class="plan-details">
      <h3><%= @plan.title %></h3>
      <div style="display: flex; justify-content: space-between;">
        <%= @plan.delivery_method %> /
        <%= @plan.price %> MXN
      </div>
      <%= simple_format(@plan.detail) %>
      <br>

      <% if current_user && @service.title != "no encontrado" && @service.user_id != current_user.id %>
        <%= link_to "Hacer el pedido", new_order_path(plan_id: @plan.id, buyer_id: current_user.id, seller_id: @service.user_id), class: "buttons__main", data: { turbo_frame: '_top'} %>
      <% elsif current_user && @service.user_id == current_user.id %>
        <%= link_to "Hacer el pedido", new_order_path(plan_id: @plan.id, buyer_id: current_user.id, seller_id: @service.user_id), class: "buttons__main", data: { turbo_frame: '_top'} %>
      <% else %>
        <%= link_to "Hacer el pedido", new_user_session_path(flash_alert: 'Por favor, inicia sesiÃ³n'), class: "buttons__main", data: { turbo_frame: '_top'} %>
      <% end %>
    </div>
  </div>
<% end %>
