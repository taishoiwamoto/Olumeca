<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Publicar</h1>
    <%= form_with(model: @service, method: :patch, html: {multipart: true}) do |f| %>
      <h3>Servicio</h3>
      <div class="form">
        <div class="form-body">
          <% @service.errors.full_messages_for(:title).each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <% @service.errors.full_messages_for(:detail).each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="field">
            <%= f.label :title, 'TÃ­tulo'  %><br/>
            <%= f.text_field :title, value: @service.title %>
          </div>

          <div class="field">
            <%= f.label :image, 'Imagen' %><br/>
            <%= f.file_field :image %>
          </div>

          <div class="field">
            <%= f.label :category_id %><br/>
            <%= f.select :category_id, options_for_select(Category.all.map{|category| [category.name, category.id]}), { prompt: 'Por favor, elija de la siguiente lista' }, required: true %>
          </div>

          <div class="field">
            <%= f.label :detail, 'Detalle' %><br/>
            <%= f.text_area :detail, value: @service.detail %>
          </div>
        </div>
      </div>
      <br>
        <%= f.submit "Actualizar", class: "button-004" %>
    <% end %>
    <br>
    <br>
  </div>
</div>
