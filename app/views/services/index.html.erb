<div class="main posts-index">
  <div class="container">
  <h1 class="form-heading">Servicios</h1>
    <% @services.each do |service| %>
      <%= link_to service_path(service) do %>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/service_images/#{service.image}" %>">
          </div>
          <div class="post-right">
            <h4><%= service.title %></h4>
            <div>
              <div class="post-user-name">
                <p>El vendedor: <%= service.user.name %></p>
              </div>
              <div style="display: flex; justify-content: space-between;">
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= paginate @services %>
  </div>
</div>
