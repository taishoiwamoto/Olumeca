                  <i class="fab fa-whatsapp fa-2x" style="margin-right: 5px;"></i>
                  <span class="contact-text">Contactar</span>
              </a>
          </li>
          <li>
            <%= link_to("Servicios", "/services/index") %>
          </li>
          <li>
            <%= link_to("Publicar", "/services/new") %>
          </li>
          <li>
            <%= link_to("Mi pÃ¡gina", "/users/#{current_user.id}") %>
          </li>
